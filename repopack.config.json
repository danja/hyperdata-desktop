{
    "output": {
        "filePath": "repopack_hyperdata-desktop.txt",
        "removeComments": true,
        "removeEmptyLines": true
    },
    "include": [
        "src/**/*.js",
        "src/**/*.ts",
        "packages/**/lib/**/*.js",
        "packages/**/lib/**/*.ts",
        "**/package.json"
    ],
    "ignore": {
        "useGitignore": true,
        "useDefaultPatterns": true,
        "customPatterns": [
            "node_modules",
            "spec",
            "test",
            "**/*.md",
            "**/*.txt",
            "static",
            "resources"
        ]
    }
}